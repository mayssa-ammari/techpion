{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="text-center mb-4">User Profiles</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for user in users %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <!-- User Photo -->
                    <img 
                        src="{{asset('./img/1000_F_353110097_nbpmfn9iHlxef4EDIhXB1tdTD0lcWhG9-1722891867.jpg') }}" 
                        class="card-img-top" 
                        alt="{{ user.nomUser }} {{ user.prenomUser }}" 
                        style="height: 250px; object-fit: cover;"
                    >

                    <!-- Card Body -->
                    <div class="card-body">
                        <h5 class="card-title">{{ user.nomUser }} {{ user.prenomUser }}</h5>
                        <p class="card-text">
                            <strong>Email:</strong> {{ user.emailUser }}<br>
                            <strong>Phone:</strong> {{ user.numtelephoneUser }}<br>
                            <strong>Role:</strong> {{ user.roleUser.value }}<br>
                            <strong>Date of Birth:</strong> {{ user.datenaissanceUser ? user.datenaissanceUser|date('Y-m-d') : 'N/A' }}
                        </p>
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer text-center">
                        <a href="{{ path('app_user_show', {'id': user.idUser}) }}" class="btn btn-info btn-sm">View Profile</a>
                        <a href="{{ path('app_user_edit', {'id': user.idUser}) }}" class="btn btn-primary btn-sm">Edit Profile</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col text-center">
                <p>No users found.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}


